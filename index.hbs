{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header sidebar">
	<nav class="main-nav clearfix">
		<a class="button subscribe-button icon-feed" href="{{@blog.url}}/rss/">
            <i class="fa fa-rss"></i>
        </a>
	</nav>
	<div class="main-header-content">
		<h1 class="page-title">{{@blog.title}}</h1>
		<h2 class="page-description">{{@blog.description}}</h2>
	</div>
	<canvas id="headerSketch" class="header-canvas"></canvas>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content home-content page-content" role="main">
	{{! The tag below includes the post loop - partials/loop.hbs }}
	{{> "loop"}}

	{{> "footer"}}
</main>

<script type="text/javascript">
	var headerImage = "{{@blog.cover}}";
	var iconImage = "{{@blog.logo}}";
</script>